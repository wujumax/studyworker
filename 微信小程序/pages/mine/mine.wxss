.body{
  width: 750rpx;
  /* height: 750rpx; */
}
.head{
  width: 750rpx;
  height: 50%;
  /* background-color: red; */
}
.photo{
  width: 750rpx;
  height: 40%;
  /* background-color: #F7F7F7; */
  display: flex;
  justify-content: center;
  align-items: center;
}
.photo image{
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
}
.user{
  width: 40%;
  height: 10%;
  /* background-color: pink; */
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-around
}
.username{
  font-size: 14px;
}
.userapply{
  font-size: 12px; 
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #AFB1AF; 
  color: #ffffff;
}
.userapply image{
  width: 35rpx;
  height: 38rpx;
  background-color: #ffffff;
}
.value{
  width: 40%;
  height: 20%;
  /* background-color: green; */
  margin: auto;
  text-align: center;
  font-size: 12px;
  line-height: 80px;
  color: #029AFF;
}
.nav{
  height: 30%;
  width: 100%;
  /* background-color: yellow; */
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.post{
  width: 30%;
  height: 100%;
  /* background-color: pink; */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.title{
  font-size: 12px;
  color: #8D8D8D;
}
.content{
  width: 100%;
  height: 49%;
  padding-top: 1rpx;
  background-color: #F7F7F7; 
  display: flex;
  justify-content: center;
}
.main{
  width: 100%;
  height: 40%;
  margin-top: 10px;
  /* background-color: blueviolet; */
}
.collect{
  width: 100%;
  height: 50%;
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.collect-left{
  width: 35%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  /* background-color: rebeccapurple; */
  font-size: 14px;
}
.collect-right{
  width: 10%;
  height: 100%;
  /* background-color: gainsboro; */
   display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.collect image{
  width: 55rpx;
  height: 55rpx;
}