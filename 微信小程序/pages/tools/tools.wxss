.body{
  width: 750rpx;
  padding: 0rpx;
  background-color: #FAF4FF;
}
.container{
  width: 95%;
  padding: 0rpx;
  margin: 0 auto;
  /* background-color: red; */
}
.head{
  width: 100%;
  height: 250rpx;
  /* background-color: green; */

}
.scroll{
  width: 100%;
  height: 300rpx;
  white-space: nowrap;
  /* box-shadow: 5px 5px 5px #888888; */
}
.block{
  display: inline-block;
  width: 200rpx;
  height: 160rpx;
  background-color:#ffffff;
  margin-top: 80rpx;
  border-radius: 10px;
  margin-right: 30rpx;
   box-shadow: 3px 3px 5px #888888; 
}
.detailed{
  display: flex;
  width: 100%;
  height: 100%;
  /* background-color: blue; */
  flex-direction: column;
}
.img{
  width: 100%;
  height: 60%;
  /* background-color: pink; */
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.img image{
  width: 80rpx;
  height: 80rpx;
  padding-left: 20rpx;
}
.title{
  width: 90%;
  height: 40%;
   /* background-color: greenyellow;  */
  display: flex;
  justify-content: flex-end;
  font-size: 12px;
  align-items: center;
  /* padding-right: 20rpx; */
}
.case{
  width: 100%;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
.lastcase{
  font-size: 14px;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
}
.text{
  width: 100%;
  height: 280rpx;
  background-color:#ffffff;
  border-radius: 5px;
  display: flex;
  flex-direction: column;
  margin-bottom: 50rpx;
}
.logo{
  width: 100%;
  height: 60%;
  /* background-color: yellow; */
  display: flex;
  justify-content: center;
  align-items: center;
}
.logo image{
  width: 250rpx;
  height: 150rpx;
}
.word{
  width: 100%;
  height: 40%;
  /* background-color: blanchedalmond; */
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
  font-size: 14px;
}
