.searh {
  line-height: 70rpx;
  width: 690rpx;
  height: 70rpx;
  color: #c6c6c6;
  margin-top: 40rpx;
  margin-left: 30rpx;
  margin-bottom: 30rpx;
  background: white;
  border-radius: 10rpx;
  z-index: 3;
}

.header {
  display: flex;
  flex-direction: column;
  justify-items: center;
  height: 500rpx;
  width: 750rpx;
  background: #626de9;
  text-align: center;
}

.img {
  border-radius: 20rpx;
  width: 690rpx;
  height: 450rpx;
  margin: 0 auto;
  z-index: 2;
}

.button {
  margin: 0 auto;
  width: 650rpx;
  background: #fefefe;
  margin-top: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.button .title {
  font-size: 32rpx;
  display: flex;
  flex-direction: column;
  height: 65rpx;
  justify-content: space-between;
  width: 140rpx;
}

.button .titleSelect {
  font-size: 35rpx;
  color: #848eef;
  display: flex;
  flex-direction: column;
  height: 65rpx;
  justify-content: space-between;
  width: 135rpx;
}

.line {
  background: #848eef;
  width: 100%;
  height: 5rpx;
}

.content {
  width: 750rpx;
  background: #f7f7f8;
}

.Topic {
  width: 750rpx;
  height: 450rpx;
  background: #f0f0f0;
}

