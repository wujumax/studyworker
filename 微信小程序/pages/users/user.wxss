/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top:80rpx;
  margin-bottom: 50rpx;
  color: #58BEFF;
}
.Entrance{
  width: 270rpx;
  height: 80rpx;
  background: #848EEF;
  border-radius: 60rpx;
  line-height: 80rpx;
}
.container{
 padding-top: 100rpx;
}
.nav{
  height: 30%;
  width: 100%;
  /* background-color: yellow; */
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.post{
  width: 30%;
  height: 100%;
  /* background-color: pink; */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.title{
  font-size: 12px;
  color: #8D8D8D;
}
.content{
  width: 100%;
  height: 49%;
  padding-top: 1rpx;
  background-color: #F7F7F7; 
  display: flex;
  justify-content: center;
}
.main{
  width: 100%;
  height: 40%;
  margin-top: 10px;
  /* background-color: blueviolet; */
}
.collect{
  width: 100%;
  height: 50%;
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.collect-left{
  width: 35%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  /* background-color: rebeccapurple; */
  font-size: 14px;
}
.collect-right{
  width: 10%;
  height: 100%;
  /* background-color: gainsboro; */
   display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.collect image{
  width: 55rpx;
  height: 55rpx;
}